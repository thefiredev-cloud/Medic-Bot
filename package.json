{
  "name": "EMS Bot",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "clean": "rm -rf .next",
    "lint": "next lint",
    "lint:strict": "eslint --ext .ts,.tsx --max-warnings 0 .",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage": "vitest run --coverage",
    "smoke": "node scripts/smoke.mjs",
    "profile:chat": "node scripts/profile.mjs chat",
    "profile:dosing": "node scripts/profile.mjs dosing",
    "kb:merge": "node scripts/merge-kb.mjs",
    "prepare": "husky install",
    "build:netlify": "npx -y netlify-cli link --id $NETLIFY_SITE_ID && npx -y netlify-cli env:pull --environment=production --yes && npx -y netlify-cli build --context production",
    "ingest:pdfs": "node scripts/ingest-pdfs.cjs",
    "ingest:md": "node scripts/ingest-md.cjs",
    "convert:pdfs:md": "node scripts/convert-pdfs-to-md.cjs",
    "export:kb:clean": "node scripts/export-clean-kb.cjs"
  },
  "dependencies": {
    "idb": "^8.0.3",
    "lucide-react": "^0.545.0",
    "minisearch": "^7.1.0",
    "next": "14.2.5",
    "pdf-parse": "^1.1.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "overrides": {
    "eslint-import-resolver-typescript": "3.6.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "eslint --max-warnings 0 --ext .ts,.tsx"
    ]
  }
}
